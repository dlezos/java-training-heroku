<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
   http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{gameFlowBean.startGame}</from-action>
            <to-view-id>/gameFlow.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>    
    <navigation-rule>
        <from-view-id>/gameFlow.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{gameFlowBean.checkAnswer}</from-action>
            <from-outcome>correct</from-outcome>
            <to-view-id>/showResult.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{gameFlowBean.checkAnswer}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/showPrize.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>